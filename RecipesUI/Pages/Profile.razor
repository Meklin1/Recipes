        </div>

        <div class="recipe-grid">
            @if (recipes == null)
            {
                <p>Loading recipes...</p>
            }
            else if (!recipes.Any())
            {
                <p>No recipes found.</p>
            }
            else
            {
                @foreach (var recipe in recipes)
                {
                    <a href="recipe/@recipe.Id">
                        <div class="recipe-card">
                            <div class="placeholder">
