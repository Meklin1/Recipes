@using Microsoft.AspNetCore.Components.Forms

@code {
    private string recipeTitle = "";
    private string description = "";
    private string prepTime = "";
    private string cookingTime = "";
    private string servings = "";
    private string energyPerServing = "";
    private string difficulty = "Easy";

    private void HandleValidSubmit()
    {
        Console.WriteLine("Form submitted successfully!");
    }

    private void SetDifficulty(string level)
    {
        difficulty = level;
    }
}
<div class="form-container">
    <EditForm Model="@this" OnValidSubmit="@HandleValidSubmit">
        <div class="input-wrapper">
            <input id="recipe-title" @bind="recipeTitle" required placeholder=" " />
            <label for="recipe-title">Recipe Title</label>
        </div>
        <div class="input-wrapper">
            <textarea id="description" @bind="description" required placeholder=" "></textarea>
            <label for="description">Description</label>
        </div>
        <div class="form-grid">
            <div class="input-wrapper">
                <input id="prep-time" @bind="prepTime" required placeholder=" " />
                <label for="prep-time">Prep Time (Min)</label>
            </div>
            <div class="input-wrapper">
                <input id="cooking-time" @bind="cookingTime" required placeholder=" " />
                <label for="cooking-time">Cooking Time (Min)</label>
            </div>
            <div class="input-wrapper">
                <input id="servings" @bind="servings" required placeholder=" " />
                <label for="servings">Servings (people)</label>
            </div>
            <div class="input-wrapper">
                <input id="energy-per-serving" @bind="energyPerServing" required placeholder=" " />
                <label for="energy-per-serving">Energy per serving (kcal)</label>
            </div>
        </div>
        <div class="difficulty-buttons">
            <button type="button" class="difficulty-button @(difficulty == "Easy" ? "active" : "")" @onclick='() => SetDifficulty("Easy")'>Easy</button>
            <button type="button" class="difficulty-button @(difficulty == "Medium" ? "active" : "")" @onclick='() => SetDifficulty("Medium")'>Medium</button>
            <button type="button" class="difficulty-button @(difficulty == "Hard" ? "active" : "")" @onclick='() => SetDifficulty("Hard")'>Hard</button>
        </div>
    </EditForm>
</div>