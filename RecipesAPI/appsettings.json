{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"AppDbContext": "Server=193.219.42.55;Port=10513;Database=recipes;Uid=admin;Pwd=adminadmin1234;",
    "AppDbContext": "Server=tcp:pskrecipe.database.windows.net,1433;Initial Catalog=PSK;Persist Security Info=False;User ID=pskrecipeapp;Password=admin123*;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "Jwt": {
    "Key": "some random key lol askjdaskjdbakjsdksjandkja",
    "Issuer": "https://localhost:7087/",
    "Audience": "https://localhost:7087/"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "RecipesAPI"
    }
  },
  "LoggingOptions": {
    "EnableLogging": true
  }

}
